{
  "name": "Podman enabled Haskell Dev Environment",
  "image": "haskell-dev",
  "runArgs": [
    "--volume=${localWorkspaceFolder}:/workspace:cached",
    "--workdir=/workspace"
  ],
  "customizations": {
    "vscode": {
        "settings": {
          "terminal.integrated.shell.linux": "/bin/bash"
        }
    }
  },
  "remoteUser": "root",
  "workspaceFolder": "/workspace",
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {}
  }
}
